<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationSociety2"
    android:orientation="vertical"
    android:padding="14dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Info :"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/sretaddress"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="10dp"
        android:hint="Address :"
        />
    <EditText
        android:id="@+id/sretphoneno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:hint="Phone Number"
        />
    <EditText
        android:id="@+id/sretemailcontact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:hint="Email Id"
        />
    <EditText
        android:id="@+id/sretwebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:hint="WebSite"
        />
    <EditText
        android:id="@+id/sretotherdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:hint="Other Details (if any)"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:id="@+id/srcheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to the "
            />
        <TextView
            android:id="@+id/srtxttnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/socitytnctxt"
            android:textColor="@android:color/holo_blue_dark"
            />

    </LinearLayout>

    <Button
        android:id="@+id/srbtnsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:background="@color/colorbtn"
        />

    <TextView
        android:id="@+id/textscreprevious2"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Previous Page"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="10dp"
        />

</LinearLayout>