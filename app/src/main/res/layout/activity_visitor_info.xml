<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".visitorinfo.VisitorInfoFormActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        >

    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="match_parent">

            <RadioButton
                android:id="@+id/vf_prebook"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Pre-Booking"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:id="@+id/vf_prebookhidell"
                >
                <EditText
                    android:id="@+id/vf_prebookreference"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:inputType="number"
                    android:hint="Reference Code"
                    />
                <Button
                    android:id="@+id/btnprebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"/>
            </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="match_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Visitor Name"
            />
        <EditText
            android:id="@+id/vf_visitorname"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:inputType="textPersonName"
            android:layout_column="2"
            />
    </TableRow>

    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Mobile No."
            />
        <EditText
            android:id="@+id/vf_visitormno"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:inputType="phone"
            android:layout_column="2"
            />
    </TableRow>

    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Reference Code"
            />
        <EditText
            android:id="@+id/vf_referencecode"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:layout_column="2"
            />
    </TableRow>

    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Vehicle Number"
            />
        <EditText
            android:id="@+id/vf_vehicleno"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_column="2"
            />
    </TableRow>

    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Reason for visit"
            />
        <EditText
            android:id="@+id/vf_reasonforvisit"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:inputType="textMultiLine"
            android:layout_column="2"
            />
    </TableRow>

    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Relation"
            />
        <EditText
            android:id="@+id/vf_relationwithperson"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:inputType="textMultiLine"
            android:layout_column="2"
            />
    </TableRow>


    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Wing"
            />
        <Spinner
            android:id="@+id/vf_wing"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_column="2"/>
    </TableRow>

    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Flat/House No."
            />
        <Spinner
            android:id="@+id/vf_flat_house_no"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_column="2"/>
    </TableRow>

    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="match_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Take a Picture"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/vf_imgview"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                />
            <Button
                android:id="@+id/vf_picbtn"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_column="2"
                android:text="Capture Image"
                />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        >
        <Button
            android:id="@+id/vf_submitbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Submit"
            android:layout_column="1"
            android:layout_span="2"
            />
    </TableRow>

    </TableLayout>
</ScrollView>