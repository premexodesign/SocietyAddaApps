<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/wings_details_flatno"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textview_size_global"
        android:hint="Flat No"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/wings_details_list_twowheeler"
        android:textSize="@dimen/textview_size_global"
        android:hint="2 Wheel"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/wings_details_list_fourwheeler"
        android:textSize="@dimen/textview_size_global"
        android:hint="4 Wheel"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:singleLine="true"
        android:id="@+id/wings_details_list_housetype"
        android:textSize="@dimen/textview_size_global"
        android:hint="House Type"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delete_item"
        android:src="@drawable/deletelistitem"
        />

</LinearLayout>